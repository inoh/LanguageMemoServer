<%= render 'navi' %>

<ul class="breadcrumb">
	<li><%= link_to "一覧", tags_path %><span class="divider">/</span></li>
	<li class="active">照会</li>
</ul>

<p id="notice"><%= notice %></p>

<h1><%= @tag.name %></h1>

<%= form_for([@tag, @tag_relation]) do |f| %>
  <div class="control-group">
    <%= f.label :memo_id, :class => 'control-label' %>
    <div class="controls">
 	   <%= f.text_field :memo_id, :class => 'input-xxlarge', :placeholder => "メモＩＤ" %>
 	</div>
  </div>
  <div class="control-group">
    <div class="controls">
	    <%= f.submit :class => 'btn-primary' %>
	</div>
  </div>
<% end %>

<table class="table table-striped table-hover">
	
<thead>
	<tr>
		<th>title</th>
		<th>note</th>
	</tr>
</thead>

<tbody>
<% @tag.memos.each do |memo| %>
<tr>
	<td><%= memo.title %></td>
  	<td><%= memo.note %></td>
</tr>
<% end %>
</tbody>

</table>
