<%= render 'navi' %>

<p id="notice"><%= notice %></p>

<h1><%= @tag.name %></h1>

<%= form_for([@tag, @tag_relation]) do |f| %>
  <div class="control-group">
    <%= f.label :memo_id, :class => 'control-label' %>
    <div class="controls">
 	   <%= f.text_field :memo_id, :class => 'input-xxlarge', :placeholder => "メモＩＤ" %>
 	</div>
  </div>
  <div class="control-group">
    <div class="controls">
	    <%= f.submit %>
	</div>
  </div>
<% end %>

<table class="table table-striped table-hover">
	
<thead>
	<tr>
		<th>title</th>
		<th>note</th>
	</tr>
</thead>

<tbody>
<% @tag.memos.each do |memo| %>
<tr>
	<td><%= memo.title %></td>
  	<td><%= memo.note %></td>
</tr>
<% end %>
</tbody>

</table>

<%= link_to 'Back', tags_path %>
